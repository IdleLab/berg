h1.h-1 Projects

.panel
  .panel__primary
    .table.link-children
      table
        thead
          tr
            th Title
            th Client
            th Status
            th.horizontal-align--center Actions
        tbody
          - projects.each do |project|
            tr id="project-#{project.slug}"
              td.vertical-align--middle
                a href="/admin/projects/#{project.slug}/edit" = project.title
              td.vertical-align--middle
                = project.client
              td.vertical-align--middle
                - if project.published?
                  .label.label--success
                    = project.status
                - elsif project.deleted?
                  .label.label--warning
                    = project.status
                - else
                  .label.label--ghost
                    = project.status
              - if project.published?
                td.horizontal-align--center.vertical-align--middle
                  a href="/projects/#{project.slug}" View
              - else
                td
p
